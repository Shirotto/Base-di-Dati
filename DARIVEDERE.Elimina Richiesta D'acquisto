-- ID della richiesta d'acquisto da eliminare
SET @id_richiesta_da_eliminare = 1;

-- Rimuove le associazioni dalla tabella "propone"
DELETE FROM propone WHERE ID_richiesta_acquisto = @id_richiesta_da_eliminare;

-- Rimuove le associazioni dalla tabella "seleziona"
DELETE FROM seleziona WHERE ID_richiesta_acquisto = @id_richiesta_da_eliminare;

-- Rimuove i prodotti candidati associati alla richiesta d'acquisto
DELETE FROM prodotto_candidato WHERE ID_richiesta_acquisto = @id_richiesta_da_eliminare;

-- Rimuove la richiesta d'acquisto dalla tabella "richiesta_acquisto"
DELETE FROM richiesta_acquisto WHERE ID = @id_richiesta_da_eliminare;

SELECT * FROM richiesta_acquisto WHERE ID = @id_richiesta_da_eliminare;
SELECT * FROM propone WHERE ID_richiesta_acquisto = @id_richiesta_da_eliminare;
SELECT * FROM seleziona WHERE ID_richiesta_acquisto = @id_richiesta_da_eliminare;
SELECT * FROM prodotto_candidato WHERE ID_richiesta_acquisto = @id_richiesta_da_eliminare;
